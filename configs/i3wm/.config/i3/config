# Disabled screensaver for i3wm
exec_always --no-startup-id "xset s off; xset -dpms; xset s noblank"

# Disable beep terminal for i3wm
exec_always --no-startup-id "xset b off"

# speed cursor in terminal
exec_always --no-startup-id "xset r rate 250 75"

# Editting 'Address Bar' and border with 3 pixel
#for_window [class="^.*"] border pixel 3
for_window [class=".*"] title_format " %title"

# Align text to the center in address bar
title_align center

# Constraining floating window size
